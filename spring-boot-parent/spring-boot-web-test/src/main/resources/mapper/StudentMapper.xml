<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.boking.webtest.transation.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="top.boking.webtest.transation.domain.Student">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="class_id" property="classId" />
        <result column="student_no" property="studentNo" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, class_id, student_no, create_time, update_time, is_deleted
    </sql>

    <!-- 根据班级ID查询学生列表 -->
    <select id="selectByClassId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM student 
        WHERE class_id = #{classId} 
        AND is_deleted = 0
        ORDER BY student_no
    </select>

    <!-- 根据学号查询学生 -->
    <select id="selectByStudentNo" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM student 
        WHERE student_no = #{studentNo} 
        AND is_deleted = 0
    </select>

    <!-- 根据姓名模糊查询学生 -->
    <select id="selectByNameLike" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM student 
        WHERE name LIKE CONCAT('%', #{name}, '%') 
        AND is_deleted = 0
        ORDER BY name
    </select>

</mapper> 